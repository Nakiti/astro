---

export interface Props {
    title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html> 
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
        
        <link rel="stylesheet" href="/styles/styles.portfolio.css">
    </head>
    <body>
        <header>
            <nav>
                <a href="/" id="header-title">Nikhil Akiti</a>
                <ul class="header-link-container">
                    <li class="header-link"><a href="/">Home</a></li>
                    <li class="header-link"><a href="/projects">Projects</a></li>
                    <li class="header-link"><a href="/experiences">Experience</a></li>
                    <li class="header-link"><a href="/about">About</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <slot />
        </main>

        <footer>
            <div class="footer-content">
                <p class="footer-name">Nikhil Akiti</p>
                <p class="footer-copyright">&copy; 2025 Nikhil Akiti. All rights reserved.</p>
                <ul class="footer-socials">
                    <li><a href="#" aria-label="LinkedIn">LinkedIn</a></li>
                    <li><a href="#" aria-label="GitHub">GitHub</a></li>
                    <li><a href="mailto:email" aria-label="Email">Email</a></li>
                </ul>
            </div>
            <noscript>
                <p>Please enable JavaScript for the best experience on this site.</p>
            </noscript>
        </footer>
    </body>
</html>